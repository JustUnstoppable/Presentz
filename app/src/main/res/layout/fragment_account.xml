<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools ="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/lightGrey"
    android:orientation="vertical"
    tools:context=".Fragments.AccountFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#121212"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_board_image"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/profileimage"
                app:civ_border_color="@color/white"
                app:civ_border_width="5dp"
               />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">

                   <TextView
                       android:id="@+id/tv_name"
                       android:layout_width="match_parent"
                       android:layout_height="50dp"
                       android:layout_marginStart="10dp"
                       android:padding="5dp"
                       android:textColor="@color/white"
                       android:textSize="30sp"
                       android:visibility="visible"
                       android:text="Alexa"
                        />

                   <TextView
                       android:id="@+id/tv_email"
                       android:layout_width="match_parent"
                       android:layout_height="35dp"
                       android:layout_marginStart="10dp"
                       android:padding="3dp"
                       android:textColor="@color/white"
                       android:textSize="20sp"
                       android:visibility="visible"
                       android:text="alexa@gmail.com"
                        />

               </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="#F1EEE9"
        >
        <TextView
            android:id="@+id/account_name_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name"
            android:textSize="40px"
            android:fontFamily="@font/lato_bold_italic"
            android:textColor="@color/black"
            android:layout_alignParentTop = "true"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal = "true"
            android:layout_marginTop="20dp" />
        <TextView
            android:id="@+id/account_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Jimmy Joe"
            android:textSize="40px"
            android:layout_weight="1"
            android:fontFamily="@font/lato_bold_italic"
            android:textColor="@color/black"
            android:layout_alignParentTop = "true"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal = "true"
            android:layout_marginTop="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="#F1EEE9"
        >
    <TextView
        android:id="@+id/account_email_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="40px"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:fontFamily="@font/lato_bold_italic"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop = "true"
        android:layout_centerHorizontal = "true"
        android:layout_marginTop="20dp" />
        <TextView
            android:id="@+id/account_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="example@gmail.com"
            android:textSize="40px"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_bold_italic"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop = "true"
            android:layout_centerHorizontal = "true"
            android:layout_marginTop="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="#F1EEE9"
        >
    <TextView
        android:id="@+id/account_phone_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Phone No"
        android:layout_weight="1"
        android:textSize="40px"
        android:textColor="@color/black"
        android:fontFamily="@font/lato_bold_italic"
        android:layout_alignParentTop = "true"
        android:layout_centerHorizontal = "true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" />
        <TextView
            android:id="@+id/account_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="8890904561"
            android:textSize="40px"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_bold_italic"
            android:layout_alignParentTop = "true"
            android:layout_centerHorizontal = "true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/profileBar"
        android:layout_width="318dp"
        android:layout_height="74dp"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/profile_bar" />

    <ImageView
        android:id="@+id/account_sale_img"
        android:layout_width="326dp"
        android:layout_height="164dp"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:src="@drawable/accountimg" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:src="@drawable/ic_account_logout"
        android:layout_gravity="center"/>
</LinearLayout>